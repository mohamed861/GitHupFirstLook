@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" asp-controller="Employee" class="btn btn-primary btn-lg mb-5">Create</a>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(e => e.Id)</th>
            <th>@Html.DisplayNameFor(e => e.Fname)</th>
            <th>@Html.DisplayNameFor(e => e.Email)</th>
            <th>@Html.DisplayNameFor(e => e.URL)</th>
            <th>@Html.DisplayNameFor(e => e.Department)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(e => item.Id)</td>
            <td>@Html.DisplayFor(e => item.Fname)</td>
            <td>@Html.DisplayFor(e => item.Email)</td>
            <td>@Html.DisplayFor(e => item.URL)</td>
            <td>@Html.DisplayFor(e => item.Department.DeptName)</td>
            <td>
                @Html.ActionLink("Edit","Edit","Employee",new { Id=item.Id},new { @class="btn btn-primary"})
                <a asp-action="Delete" asp-controller="Employee" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
@**@